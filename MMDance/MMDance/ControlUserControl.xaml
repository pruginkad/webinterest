<UserControl x:Class="MMDance.ControlUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600">
    <Grid Margin="5,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="89*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column = "0" Grid.Row = "0" VerticalAlignment="Top" Height="Auto">
            <Button Content="Открыть файл" Height="23" HorizontalAlignment="Stretch" Name="buttonOpenFile" Click="buttonOpenFile_Click" Width="Auto"/>
            <Button Content="Открыть устройство" Height="23" HorizontalAlignment="Stretch" Name="buttonOpenDevice" Click="buttonOpenDevice_Click" />
            <Button Content="Начать" Height="23" HorizontalAlignment="Stretch" Name="buttonStartWork" Click="buttonStartWork_Click" />
            <CheckBox Content="Включить приводы" Height="16" HorizontalAlignment="Left" Name="checkBoxOutpusEnergy" VerticalAlignment="Top" Checked="checkBoxOutpusEnergy_Checked" />
            <CheckBox Content="Пауза" Height="16" HorizontalAlignment="Left" Name="checkBoxPause" VerticalAlignment="Top" Unchecked="checkBoxPause_Unchecked" Checked="checkBoxPause_Checked" />
            <CheckBox Content="Поднять" Height="16" HorizontalAlignment="Left" Name="checkBoxInk" VerticalAlignment="Top" Checked="checkBoxInk_Checked" Unchecked="checkBoxInk_Unchecked" />
            <TextBlock Height="23" HorizontalAlignment="Left" Name="textBlockInfo" Text="->>>" VerticalAlignment="Top" />
        </StackPanel>

        <Grid Grid.Column = "1"  Grid.Row = "0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label  Grid.Column = "0"  Grid.Row = "0" Grid.ColumnSpan="2"  Content="Множители таймера:" Height="28" HorizontalAlignment="Left"/>
            
            <Label  Grid.Column = "0"  Grid.Row = "1" Content="Общий:" Height="28" HorizontalAlignment="Right"/>
            <TextBox Grid.Column = "1"  Grid.Row = "1" Height="23" Name="textBoxTimerRes" MinWidth="20" HorizontalAlignment="Left" Text="{Binding Source={StaticResource Settings}, Path=Default.TimerRes}"/>

            <Label  Grid.Column = "0"  Grid.Row = "2" Content="таймера Х:" Height="28" HorizontalAlignment="Right"/>
            <TextBox Grid.Column = "1"  Grid.Row = "2" Height="23" Name="textBoxTimerMultiplierX" MinWidth="20" HorizontalAlignment="Left" Text="{Binding Source={StaticResource Settings}, Path=Default.TimerMultiplierX}"/>

            <Label  Grid.Column = "0"  Grid.Row = "3" Content="таймера Y:" Height="28" HorizontalAlignment="Right"/>
            <TextBox Grid.Column = "1"  Grid.Row = "3" Height="23" Name="textBoxTimerMultiplierY" MinWidth="20" HorizontalAlignment="Left" Text="{Binding Source={StaticResource Settings}, Path=Default.TimerMultiplierY}"/>

            <Label  Grid.Column = "0"  Grid.Row = "4" Content="таймера Z:" Height="28" HorizontalAlignment="Right"/>
            <TextBox Grid.Column = "1"  Grid.Row = "4" Height="23" Name="textBoxTimerMultiplierZ" MinWidth="20" HorizontalAlignment="Left" Text="{Binding Source={StaticResource Settings}, Path=Default.TimerMultiplierZ}"/>

            <Label  Grid.Column = "0"  Grid.Row = "5" Content="Удар:" Height="28" HorizontalAlignment="Right"/>
            <TextBox Grid.Column = "1"  Grid.Row = "5" Height="23" Name="textBoxTimerStrike" MinWidth="20" HorizontalAlignment="Left" Text="{Binding Source={StaticResource Settings}, Path=Default.TimerStrike}"/>
        </Grid>

        <Grid Grid.Column = "2"  Grid.Row = "0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Column = "0"  Grid.Row = "0" Grid.ColumnSpan="2">
            <Label  Content="Множители" Height="28" HorizontalAlignment="Left"/>
                <Label  Content="шага:" Height="28" HorizontalAlignment="Right"/>
            </StackPanel>
            <Label  Grid.Column = "0"  Grid.Row = "1" Content="шаг Х:" Height="28"  HorizontalAlignment="Right"/>
            <TextBox Grid.Column = "1"  Grid.Row = "1" Height="23" Name="textBoxStepMultiplierX" MinWidth="20" HorizontalAlignment="Left" Text="{Binding Source={StaticResource Settings}, Path=Default.StepMultiplierX}"/>

            <Label  Grid.Column = "0"  Grid.Row = "2" Content="шаг Y:" Height="28"  HorizontalAlignment="Right"/>
            <TextBox Grid.Column = "1"  Grid.Row = "2" Height="23" Name="textBoxStepMultiplierY" MinWidth="20" HorizontalAlignment="Left" Text="{Binding Source={StaticResource Settings}, Path=Default.StepMultiplierY}"/>

            <Label  Grid.Column = "0"  Grid.Row = "3" Content="шаг Z:" Height="28" HorizontalAlignment="Right"/>
            <TextBox Grid.Column = "1"  Grid.Row = "3" Height="23" Name="textBoxStepMultiplierZ" MinWidth="20" HorizontalAlignment="Left" Text="{Binding Source={StaticResource Settings}, Path=Default.StepMultiplierZ}"/>
        </Grid>

        <Grid Grid.Column = "3"  Grid.Row = "0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button  Grid.Column = "0"  Grid.Row = "0" Content="Х+" Name ="X_Plus" Height="28"  HorizontalAlignment="Stretch" Click="X_Plus_Click" />
            <TextBox Grid.Column = "1"  Grid.Row = "0" Name ="XShift" Height="23"  MinWidth="30" HorizontalAlignment="Left" Text="0"/>
            <Button  Grid.Column = "2"  Grid.Row = "0" Content="Х-" Name ="X_Minus" Height="28"  HorizontalAlignment="Stretch" Click="X_Minus_Click" />

            <Button  Grid.Column = "0"  Grid.Row = "1" Content="Y+" Name ="Y_Plus" Height="28"  HorizontalAlignment="Stretch" Click="Y_Plus_Click" />
            <TextBox Grid.Column = "1"  Grid.Row = "1" Name ="YShift" Height="23"  MinWidth="30" HorizontalAlignment="Left" Text="0"/>
            <Button  Grid.Column = "2"  Grid.Row = "1" Content="Y-" Name ="Y_Minus" Height="28"  HorizontalAlignment="Stretch" Click="Y_Minus_Click" />

            <Button  Grid.Column = "0"  Grid.Row = "2" Content="Z+" Name ="Z_Plus" Height="28"  HorizontalAlignment="Stretch" Click="Z_Plus_Click" />
            <TextBox Grid.Column = "1"  Grid.Row = "2" Name ="ZShift" Height="23"  MinWidth="30" HorizontalAlignment="Left" Text="0"/>
            <Button  Grid.Column = "2"  Grid.Row = "2" Content="Z-" Name ="Z_Minus" Height="28"  HorizontalAlignment="Stretch" Click="Z_Minus_Click" />

            <Button  Grid.Column = "0"  Grid.Row = "3" Content="->XY" Name ="GoToXY" Height="28"  HorizontalAlignment="Right" Click="GoToXY_Click" />
            <TextBox Grid.Column = "1"  Grid.Row = "3" Name="GoToXEdit"  Height="23"  MinWidth="30" HorizontalAlignment="Left" Text="0"/>
            <TextBox Grid.Column = "2"  Grid.Row = "3" Name="GoToYEdit" Height="23"  MinWidth="30" HorizontalAlignment="Left" Text="0"/>

            <Button  Grid.Column = "0"  Grid.Row = "4" Content="->Z" Name ="GoToZ" Height="28"  HorizontalAlignment="Stretch" Click="GoToZ_Click" />
            <TextBox Grid.Column = "1"  Grid.Row = "4" Name="GoToZEdit" Height="23"  MinWidth="30" HorizontalAlignment="Left" Text="0"/>
        </Grid>
        
    </Grid>
</UserControl>
