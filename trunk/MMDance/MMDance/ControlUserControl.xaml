<UserControl x:Class="MMDance.ControlUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
        <Button Content="Открыть файл" Height="23" HorizontalAlignment="Left" Name="buttonOpenFile" VerticalAlignment="Top" Click="buttonOpenFile_Click" Width="Auto"/>
        <Button Content="Начать" Height="23" HorizontalAlignment="Left" Name="buttonStartWork" VerticalAlignment="Top" Click="buttonStartWork_Click" />
        <Button Content="Открыть устройство" Height="23" HorizontalAlignment="Left" Name="buttonOpenDevice" VerticalAlignment="Top" Click="buttonOpenDevice_Click" />
            <Label Content="Разрешение таймера:" Height="28" Name="label1" />
            <TextBox Height="23" Name="textBoxTimerRes" Width="120" HorizontalAlignment="Left" Text="{Binding Source={StaticResource Settings}, Path=Default.TimerRes}"/>
        </StackPanel>
    </Grid>
</UserControl>
